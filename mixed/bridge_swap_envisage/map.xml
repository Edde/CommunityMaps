<map proto="1.4.2">
<name>Bridge Swap: Envisage</name>
<version>1.0</version>
<objective>Break the enemy team's quartz blocks, located near their spawn point!</objective>
<created>2024-09-14</created>
<phase>staging</phase>
<include id="bridge"/>
<game>Bridge and Block Swap</game>
<constants>
    <constant id="map-origin">0.5,64,0.5</constant>
    <constant id="void-plane">51</constant>
    <!-- Match -->
    <constant id="score-limit">4</constant>
    <!-- Teams -->
    <constant id="team-one-spawn">36.5,68,7.5</constant>
    <constant id="team-one-yaw">120</constant>
    <constant id="team-two-spawn">-35.5,68,-6.5</constant>
    <constant id="team-two-yaw">-60</constant>
    <!-- Misc. -->
    <constant id="show-tutorial">0</constant>
</constants>
<authors>
    <author uuid="9d4779a8-d35f-45d2-b51c-95de7a77e128"/> <!-- zzuf -->
</authors>
<teams>
    <team id="team-one" color="dark red" max="5">Red</team>
    <team id="team-two" color="yellow" max="5">Yellow</team>
</teams>
<spawns>
    <default>
        <regions>
            <cylinder yaw="0" base="0.5,80,-29.5" height="0" radius="2"/>
            <cylinder yaw="180" base="0.5,80,30.5" height="0" radius="2"/>
        </regions>
    </default>
</spawns>
<kits>
    <kit id="zzuf-obs-kit">
        <book show-other="false">
            <title>`e`lHow to Play</title>
            <author>zzuf</author>
            <pages>
                <page>
                    `2» `lBRIDGE +
                    `2» `lBLOCK SWAP`0
                    
                    Each team has a
                    `6quartz platform`0,
                    below or behind their
                    spawn point.
                    
                    Convert all the enemy
                    `8quartz blocks`0 into
                    `cwo`eol`0!
                </page>
            </pages>
        </book>
    </kit>
    <give kit="zzuf-obs-kit" filter="all(is-observer)"/>
</kits>
<filters>
    <any id="block-list">
        <material id="only-red-block">wool:14</material>
        <material id="only-yellow-block">wool:4</material>
        <material>stained clay:14</material>
        <material>stained clay:4</material>
        <material>stained clay:0</material>
        <material>quartz block</material>
        <material>long grass</material>
        <material>double plant</material>
    </any>
    <all id="team-one-controlling-point"> <!-- Yellow side -->
        <offset vector="-24,69,15" filter="only-red-block"/>
        <offset vector="-24,69,14" filter="only-red-block"/>
        <offset vector="-24,69,13" filter="only-red-block"/>
        <offset vector="-23,69,15" filter="only-red-block"/>
        <offset vector="-23,69,14" filter="only-red-block"/>
        <offset vector="-23,69,13" filter="only-red-block"/>
        <offset vector="-22,69,15" filter="only-red-block"/>
        <offset vector="-22,69,14" filter="only-red-block"/>
        <offset vector="-22,69,13" filter="only-red-block"/>
    </all>
    <all id="team-two-controlling-point"> <!-- Red side -->
        <offset vector="24,69,-15" filter="only-yellow-block"/>
        <offset vector="24,69,-14" filter="only-yellow-block"/>
        <offset vector="24,69,-13" filter="only-yellow-block"/>
        <offset vector="23,69,-15" filter="only-yellow-block"/>
        <offset vector="23,69,-14" filter="only-yellow-block"/>
        <offset vector="23,69,-13" filter="only-yellow-block"/>
        <offset vector="22,69,-15" filter="only-yellow-block"/>
        <offset vector="22,69,-14" filter="only-yellow-block"/>
        <offset vector="22,69,-13" filter="only-yellow-block"/>
    </all>
    <all id="team-one-own-point">
        <filter id="team-one-controlling-point"/>
        <filter id="only-team-one"/>
    </all>
    <all id="team-two-own-point">
        <filter id="team-two-controlling-point"/>
        <filter id="only-team-two"/>
    </all>
    <all id="team-one-other-point">
        <filter id="team-two-controlling-point"/>
        <filter id="only-team-one"/>
    </all>
    <all id="team-two-other-point">
        <filter id="team-one-controlling-point"/>
        <filter id="only-team-two"/>
    </all>
    <deny id="deny-physics">
        <any>
            <material>redstone wire</material>
            <material>long grass</material>
            <material>double plant</material>
        </any>
    </deny>
</filters>
<regions>
    <negative id="not-buildable">
        <union>
            <cuboid min="29,56,-19" max="-28,70,20"/>
            <union id="extra">
                <cuboid min="29,56,11" max="33,70,4"/>
                <cuboid min="29,56,4" max="37,70,-2"/>
                <cuboid min="29,56,-8" max="40,70,-2"/>
            </union>
            <mirror region="extra-m" origin="${map-origin}" normal="0,0,1"/>
            <region id="points"/>
        </union>
    </negative>
    <mirror id="extra-m" region="extra" origin="${map-origin}" normal="1,0,0"/>
    <!--
    <empty id="team-one-portal"/>
    <empty id="team-two-portal"/>
    -->
    <cuboid id="team-one-portal" min="0,0,0" size="0,0,0"/>
    <mirror id="team-two-portal" region="team-one-portal" origin="${map-origin}" normal="1,0,0"/>
    <union id="cages">
        <cylinder id="team-one-spawn-cage" base="${team-one-spawn}" height="3" radius="2"/>
        <cylinder id="team-two-spawn-cage" base="${team-two-spawn}" height="3" radius="2"/>
    </union>
    <mirror id="team-one-point-m" region="team-one-point" origin="${map-origin}" normal="1,0,0"/>
    <union id="points">
        <cuboid id="team-one-point" min="22,69,-15" size="3,1,3"/>
        <mirror id="team-two-point" region="team-one-point-m" origin="${map-origin}" normal="0,0,1"/>
    </union>
    <apply use="never" block-physics="deny-physics"/>
    <mirror id="team-one-jump-pad-1-m" region="team-one-jump-pad-1" origin="${map-origin}" normal="1,0,0"/>
    <apply velocity="-1.5,1.3,-1.5">
        <region>
            <cuboid id="team-one-jump-pad-1" min="37,69,1" max="40,70,-1"/>
        </region>
    </apply>
    <apply velocity="1.5,1.3,1.5">
        <region>
            <mirror region="team-one-jump-pad-1-m" origin="${map-origin}" normal="0,0,1"/>
        </region>
    </apply>
    <mirror id="team-one-jump-pad-2-m" region="team-one-jump-pad-2" origin="${map-origin}" normal="1,0,0"/>
    <apply velocity="0,1.5,-2.8">
        <region>
            <cuboid id="team-one-jump-pad-2" min="27,70,15" max="25,71,13"/>
        </region>
    </apply>
    <apply velocity="0,1.5,2.8">
        <region>
            <mirror region="team-one-jump-pad-2-m" origin="${map-origin}" normal="0,0,1"/>
        </region>
    </apply>
</regions>
<actions>
    <action id="increment-round-custom" scope="player">
        <switch-scope outer="player" inner="match">
            <set var="can_score" value="0"/>
            <set var="round_status" value="1"/>
            <action id="set-buytime"/>
            <kill-entities filter="remove-entities"/>
        </switch-scope>
        <action id="tiebreaker-win"/>
    </action>
    <action id="increment-score-t1" scope="match">
        <set var="team_one_score" value="team_one_score+1"/>
    </action>
    <action id="increment-score-t2" scope="match">
        <set var="team_two_score" value="team_two_score+1"/>
    </action>
    <trigger filter="team-one-controlling-point" action="increment-score-t1" scope="match"/>
    <trigger filter="team-two-controlling-point" action="increment-score-t2" scope="match"/>
    <trigger filter="team-one-own-point" action="increment-round-custom" scope="player"/>
    <trigger filter="team-two-own-point" action="increment-round-custom" scope="player"/>
    <trigger filter="team-one-controlling-point" action="reset-points" scope="match"/>
    <trigger filter="team-two-controlling-point" action="reset-points" scope="match"/>
    <action id="reset-points" scope="match">
        <fill region="points" material="quartz block"/>
    </action>
    <trigger filter="team-one-controlling-point" action="set-team-one" scope="player"/>
    <trigger filter="team-two-controlling-point" action="set-team-two" scope="player"/>
    <action id="platform-sfx-good-t1-check" scope="player">
        <switch-scope outer="player" inner="match">
            <switch-scope outer="match" inner="player">
                <action id="platform-sfx-good-t1"/>
            </switch-scope>
        </switch-scope>
    </action>
    <action id="platform-sfx-good-t1" scope="player" filter="only-team-one">
        <sound key="fireworks.twinkle"/>
        <!-- <message text=" `cRed`f has damaged `eYellow Platform`r"/> -->
        <switch-scope outer="player" inner="match">
            <action id="platform-sfx-bad-t2-check"/>
        </switch-scope>
    </action>
    <action id="platform-sfx-bad-t1-check" scope="match">
        <switch-scope outer="match" inner="player">
            <action id="platform-sfx-bad-t1"/>
        </switch-scope>
    </action>
    <action id="platform-sfx-bad-t1" scope="player" filter="only-team-one">
        <sound key="mob.wither.hurt" volume="0.4"/>
        <!-- <message text=" `eYellow`f has damaged `cRed Platform`r"/> -->
    </action>
    <action id="platform-sfx-good-t2-check" scope="player">
        <switch-scope outer="player" inner="match">
            <switch-scope outer="match" inner="player">
                <action id="platform-sfx-good-t2"/>
            </switch-scope>
        </switch-scope>
    </action>
    <action id="platform-sfx-good-t2" scope="player" filter="only-team-two">
        <sound key="fireworks.twinkle"/>
        <!-- <message text=" `eYellow`f has damaged `cRed Platform`r"/> -->
        <switch-scope outer="player" inner="match">
            <action id="platform-sfx-bad-t1-check"/>
        </switch-scope>
    </action>
    <action id="platform-sfx-bad-t2-check" scope="match">
        <switch-scope outer="match" inner="player">
            <action id="platform-sfx-bad-t2"/>
        </switch-scope>
    </action>
    <action id="platform-sfx-bad-t2" scope="player" filter="only-team-two">
        <sound key="mob.wither.hurt" volume="0.4"/>
        <!-- <message text=" `cRed`f has damaged `eYellow Platform`r"/> -->
    </action>
</actions>
<itemremove>
    <item>quartz block</item>
    <item>seeds</item>
</itemremove>
<block-drops>
    <rule>
        <filter>
            <all>
                <material>quartz block</material>
                <team>team-one</team>
                <region id="team-two-point"/>
            </all>
        </filter>
        <replacement>wool:14</replacement>
        <kit>
            <action id="platform-sfx-good-t1-check"/>
        </kit>
    </rule>
    <rule>
        <filter>
            <all>
                <material>quartz block</material>
                <team>team-two</team>
                <region id="team-one-point"/>
            </all>
        </filter>
        <replacement>wool:4</replacement>
        <kit>
            <action id="platform-sfx-good-t2-check"/>
        </kit>
    </rule>
    <rule>
        <filter>
            <all>
                <material>quartz block</material>
                <team>team-two</team>
                <region id="team-two-point"/>
            </all>
        </filter>
        <replacement>quartz block</replacement>
    </rule>
    <rule>
        <filter>
            <all>
                <material>quartz block</material>
                <team>team-one</team>
                <region id="team-one-point"/>
            </all>
        </filter>
        <replacement>quartz block</replacement>
    </rule>
    <rule>
        <filter>
            <all>
                <material>wool</material>
                <team>team-two</team>
                <region id="team-two-point"/>
            </all>
        </filter>
        <replacement>wool:14</replacement>
    </rule>
    <rule>
        <filter>
            <all>
                <material>wool:4</material>
                <team>team-one</team>
                <region id="team-one-point"/>
            </all>
        </filter>
        <replacement>wool:4</replacement>
    </rule>
    <rule>
        <filter>
            <all>
                <material>wool</material>
                <team>team-two</team>
                <region id="team-one-point"/>
            </all>
        </filter>
        <replacement>wool:4</replacement>
    </rule>
    <rule>
        <filter>
            <all>
                <material>wool</material>
                <team>team-one</team>
                <region id="team-two-point"/>
            </all>
        </filter>
        <replacement>wool:14</replacement>
    </rule>
</block-drops>
</map>