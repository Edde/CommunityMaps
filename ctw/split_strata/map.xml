<map proto="1.5.0">
<name>Split Strata</name>
<version>1.0.0</version>
<objective>Steal the enemy team's wools and bring them back to your base</objective>
<created>2024-12-17</created>
<gamemode>ctw</gamemode>
<include id="gapple-kill-reward"/>
<include id="iron-bulkcrafting"/>
<phase>development</phase>
<authors>
    <author uuid="5ff7bfa3-12e8-4c3b-9a14-ca7c540bd90d" contribution="Main map idea, layout, building" /> <!-- Valoryie -->
    <author uuid="124e6b2c-6fac-43c1-8903-8f58665d0cd9" contribution="Layout, WE, ideas, tweaks, building" /> <!-- Clay2A -->
    <author uuid="660a9502-4872-43ba-b7f7-1f49ab588526" contribution="Layout, ideas" /> <!-- FbprZ7 -->
</authors>
<contributors>
    <contributor uuid="e82603df-417d-4a95-bd1f-1720648be0b4" contribution="Feedback"/> <!-- Pablete1234 -->
    <contributor uuid="2fd57dff-4cff-4b60-96a4-d26e37759c03" contribution="XML, feedback, advisory"/> <!-- PeakDominance -->
</contributors>
<teams>
    <team id="red_team" color="dark red" max="24">Red</team>
    <team id="blue_team" color="blue" max="24">Blue</team>
</teams>
<wools craftable="false">
    <!-- Red wools -->
    <wool team="red_team" color="green" location="-48,22,-121">
        <monument>
            <block>-4.5,20,96.5</block>
        </monument>
    </wool>
    <wool team="red_team" color="lime" location="49,22,-121">
        <monument>
            <block>5.5,20,96.5</block>
        </monument>
    </wool>
    <!-- Blue wools -->
    <wool team="blue_team" color="yellow" location="49,22,122">
        <monument>
            <block>5.5,20,-95.5</block>
        </monument>
    </wool>
    <wool team="blue_team" color="orange" location="-48,22,122">
        <monument>
            <block>-4.5,20,-95.5</block>
        </monument>
    </wool>
</wools>
<filters>
    <material id="only_iron_block">iron block</material>
    <deny id="deny_spawner">
        <any>
            <material>gold block</material>
            <material>gold plate</material>
            <material>mob spawner</material>
        </any>
    </deny>
</filters>
<regions>
    <union id="spawn_circles">
        <circle id="red_spawn_circle" center="0.5,101.5" radius="11.5" />
        <circle id="blue_spawn_circle" center="0.5,-100.5" radius="11.5" />
    </union>
    <union id="areas_in_front_of_spawns">
        <rectangle min="-6.5,80.5" max="7.5,92.5" />
        <rectangle min="-6.5,-91.5" max="7.5,-79.5" />
    </union>
    <union id="red_woolrooms">
        <rectangle id="orange_woolroom_rectangle" min="-55.5,115.5" max="-41.5,127.5" />
        <rectangle id="yellow_woolroom_rectangle" min="42.5,115.5" max="56.5,127.5" />
    </union>
    <union id="blue_woolrooms">
        <rectangle id="green_woolroom_rectangle" min="-55.5,-126.5" max="-41.5,-114.5" />
        <rectangle id="lime_woolroom_rectangle" min="42.5,-126.5" max="56.5,-114.5" />
    </union>
    <negative id="not_buildable_over_void">
        <rectangle min="-31.5,-70.5" max="32.5,71.5"/>
    </negative>

    <apply region="everywhere" block-break="deny_spawner" message="You cannot destroy spawners"/>
    <apply region="red_woolrooms" enter="blue_team" message="You cannot enter your own woolroom"/>
    <apply region="blue_woolrooms" enter="red_team" message="You cannot enter your own woolroom"/>
    <apply region="red_spawn_circle" enter="red_team" message="You cannot enter your enemy's spawn!"/>
    <apply region="blue_spawn_circle" enter="blue_team" message="You cannot enter your enemy's spawn!"/>
    <apply region="red_woolrooms" block="blue_team" message="You cannot break/place blocks here"/>
    <apply region="blue_woolrooms" block="red_team" message="You cannot break/place blocks here"/>
    <apply region="spawn_circles" block-break="only_iron_block" block-place="deny(participating)" block-physics="never" message="You cannot modify the spawn area!" />
    <apply region="areas_in_front_of_spawns" block="never" message="You cannot build in front of spawn"/>
    <apply region="not_buildable_over_void" block="deny(void)" message="You cannot build outside of the map"/>
</regions>
<spawns>
    <spawn team="red_team" kit="spawn_kit" yaw="180">
        <region>
            <point>0.5,105,108.5</point>
        </region>
    </spawn>
    <spawn team="blue_team" kit="spawn_kit">
        <region>
            <point>0.5,105,-107.5</point>
        </region>
    </spawn>
    <default yaw="90" pitch="-8">
        <region>
            <point>58.5,49,0.5</point>
        </region>
    </default>
</spawns>
<kits>
    <kit id="spawn_kit">
        <clear/>
        <helmet material="leather helmet" unbreakable="true" team-color="true"/>
        <chestplate material="leather chestplate" unbreakable="true" team-color="true"/>
        <leggings material="chainmail leggings" unbreakable="true" enchantment="projectile_protection:2"/>
        <boots material="leather boots" unbreakable="true" team-color="true"/>
        <item material="iron sword" slot="0" unbreakable="true" enchantment="bane_of_arthropods:8" />
        <item material="bow" slot="1" unbreakable="true"/>
        <item material="iron pickaxe" slot="2" unbreakable="true" enchantment="efficiency:1"/>
        <item material="iron axe" slot="3" unbreakable="true" enchantment="efficiency:1"/>
        <item material="wood" slot="4" amount="64" damage="2" />
        <item material="stained clay" slot="5" amount="64" team-color="true" />
        <item material="golden apple" slot="6" amount="1" />
        <item material="bucket" slot="8" amount="1" />
        <item material="arrow" slot="28" amount="32" />
        <item material="stained clay" slot="32" amount="64" team-color="true" />
    </kit>
</kits>
<renewables>
    <renewable region="spawn_circles" renew-filter="only_iron_block" interval="5s"/>
</renewables>
<spawners>
<!-- Gapples spawner at middle -->
    <spawner max-entities="5" min-delay="5s" max-delay="10s">
        <spawn-region>
            <point>0.5,14,0.5</point>
        </spawn-region>
        <player-region>
            <cuboid min="-1.5,14,-1.5" max="2.5,14,2.5"/>
        </player-region>
        <item material="golden apple" amount="1" />
    </spawner>
<!-- Green wool spawner -->
    <spawner max-entities="5" delay="2s" player-region="green_woolroom_rectangle">
        <spawn-region>
            <point>-48.5,22.5,-121.5</point>
        </spawn-region>
        <item material="wool" damage="13" amount="1" />
    </spawner>
<!-- Lime wool spawner -->
    <spawner max-entities="5" delay="2s" player-region="lime_woolroom_rectangle">
        <spawn-region>
            <point>49.5,22.5,-121.5</point>
        </spawn-region>
        <item material="wool" damage="5" amount="1" />
    </spawner>
<!-- Yellow wool spawner -->
    <spawner max-entities="5" delay="2s" player-region="yellow_woolroom_rectangle">
        <spawn-region>
            <point>49.5,22.5,122.5</point>
        </spawn-region>
        <item material="wool" damage="4" amount="1" />
    </spawner>
<!-- Orange wool spawner -->
    <spawner max-entities="5" delay="2s" player-region="orange_woolroom_rectangle">
        <spawn-region>
            <point>-48.5,22.5,122.5</point>
        </spawn-region>
        <item material="wool" damage="1" amount="1" />
    </spawner>
</spawners>
<kill-rewards>
    <kill-reward>
        <item material="wood" amount="32" damage="2"/>
        <item material="arrow" amount="16"/>
    </kill-reward>
</kill-rewards>
<item-mods>
    <rule>
        <match>
            <material>iron leggings</material>
        </match>
        <modify enchantment="projectile_protection:2"/>
    </rule>
</item-mods>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>chainmail leggings</item>
    <item>leather boots</item>
</itemremove>
<itemkeep>
<!-- These items get cleared in the spawn kit, they're here to prevent them from dropping on the ground after dying -->
    <item>bucket</item>
    <item>water bucket</item>
    <item>arrow</item>
    <item>iron sword</item>
    <item>iron pickaxe</item>
    <item>iron axe</item>
</itemkeep>
<damage>
    <deny>
        <all>
            <region id="spawn_circles"/>
            <cause>fall</cause>
        </all>
    </deny>
</damage>
<hunger>
    <depletion>off</depletion>
</hunger>
<maxbuildheight>39</maxbuildheight>
</map>